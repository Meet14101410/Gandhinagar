# Represents a landmark or point of interest
class Landmark
  attr_reader :name, :type, :description

  def initialize(name, type, description)
    @name = name
    @type = type
    @description = description
  end

  def to_s
    "Name: #{name}, Type: #{type}, Description: #{description}"
  end
end

# Represents the city of Gandhinagar
class GandhinagarInfo
  def initialize
    @facts = {
      "Location" => "Gujarat, India",
      "Population" => "Approx. 350,000 (2023)",
      "Known For" => "Capital of Gujarat, green city, and Akshardham Temple"
    }
    @landmarks = []
    
    add_landmark("Akshardham Temple", "Religious Site", "A magnificent temple complex and a spiritual landmark.")
    add_landmark("Indroda Nature Park", "Nature Reserve", "Known as India's Jurassic Park, it features dinosaur fossils and a zoo.")
    add_landmark("Sarita Udhyan", "Garden/Park", "A popular picnic spot along the Sabarmati River.")
  end

  def add_landmark(name, type, description)
    @landmarks << Landmark.new(name, type, description)
  end

  def get_fact(name)
    @facts[name]
  end

  def search_landmarks_by_type(type)
    @landmarks.select { |l| l.type == type }
  end
end

# Main script logic
gandhinagar = GandhinagarInfo.new
puts "Population: #{gandhinagar.get_fact('Population')}"

puts "\nSearching for religious sites:"
gandhinagar.search_landmarks_by_type("Religious Site").each { |l| puts l }

puts "\nSearching for gardens:"
gandhinagar.search_landmarks_by_type("Garden/Park").each { |l| puts l }
